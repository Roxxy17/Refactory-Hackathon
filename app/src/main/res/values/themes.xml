<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KalanaCommerce" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Splash.DoubleFix" parent="Theme.SplashScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">0</item>

        <item name="postSplashScreenTheme">@style/Theme.KalanaCommerce</item>
    </style>
</resources>